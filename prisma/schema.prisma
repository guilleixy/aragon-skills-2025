generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Competidor {
  id Int @id @default(autoincrement())
  name String
  surname String
  escuela Escuela @relation(fields: [escuelaId], references: [id])
  escuelaId Int
    especialidad Especialidad @relation(fields: [especialidadId], references: [id])
  especialidadId Int
  resultados ResultadoCompetidor[]
}

model Escuela{
  id Int @id @default(autoincrement())
  name String
  alumnos Competidor[]
}

model Especialidad {
  id Int @id @default(autoincrement())
  name String
  code Int
  especialistas Competidor[]
}

model Edicion{
  id Int @id @default(autoincrement())
  year Int
  resultados ResultadoCompetidor[]
}

model ResultadoCompetidor{
  competidor Competidor @relation(fields: [competidorId], references: [id])
  competidorId   Int
  edicion Edicion @relation(fields: [edicionId], references: [id])
  edicionId Int
  position Int
  @@id([competidorId, edicionId]) 
}